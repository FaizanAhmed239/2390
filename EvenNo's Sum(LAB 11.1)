/*
Purpose:  Sum of even numbers within a range
NO FORMATTED OUTPUT!!
*/


#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n1=0, n2=0, even=0;
    printf("Enter two integers: ");
    scanf("%d %d", &n1, &n2);
    if ((n2>n1) && (n1%2==0))                   //CASE1
    {
        while (n2>=n1)
    {
        even = even + n1;
        n1 = n1 + 2;
    }
    }
    else if ((n2>n1) && (n1%2!=0))              //CASE2
    {
        while (n2>=n1)
    {
        n1++;
        even = even + n1;
        n1 = n1 + 2;
    }
    }
    else if ((n1>n2) && (n2%2==0))               //CASE3
    {
        while (n1>=n2)
    {
        even = even + n2;
        n2 = n2 + 2;
    }
    }
    else if ((n1>n2) && (n2%2!=0))              //CASE4
    {
        while (n1>=n2)
    {
        n2++;
        even = even + n2;
        n2 = n2 + 2;
    }
    }
    else                                       //CASE5
    {
        even = 0
        printf("Numbers are same!")
    }



    printf("Sum is: %d", even);
    return 0;
}



